<div class="container-fluid py-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ConcurrencyStamp" />
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <p class="text-uppercase text-sm">Edit Role (<em>@Model.Id</em>)</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group" style="display:flex;">
                                <input type="submit" value="Edit" class="btn btn-success btn-sm" />
                                <button class="btn btn-danger btn-sm ms-auto  " asp-action="Index">Back to List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
